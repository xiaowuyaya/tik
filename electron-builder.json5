/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "com.lol-tool.tik.app",
  "copyright": "Copyright (C) 2022 Tencent.All Rights Reserved",
  "productName": "Tik",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-app",
    "dist"
  ],
  "extraResources": {
    "from": "./extraResources/",
    "to": "extraResources"
  },
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  },
  "releaseInfo": {
    "releaseNotes": ""
  },
  "win": {
    "icon": "lib/icon.ico",
    "requestedExecutionLevel": "highestAvailable",
    "target": [
      {
        "target": "nsis"
        // "target": "portable"
      }
    ],
    "artifactName": "tik_${version}.${ext}"
  },
  "nsis": {
    "shortcutName": "Tik 英雄联盟对局助手",
    "runAfterFinish": false,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "allowElevation": true,
    "createStartMenuShortcut": true,
    "installerIcon": "lib/icon.ico",
    "uninstallerIcon": "lib/icon.ico",
    "installerHeaderIcon": "lib/icon.ico"
  }
}